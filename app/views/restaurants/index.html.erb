<h1>Restaurants</h1>
  <ul class="list-group">
    <% @restaurants.each do |restaurant| %>
      <li class="list-group-item">
        <h2><%= link_to restaurant.name, restaurant_path(restaurant[:id]) %></h2>
        <p><%= restaurant.category.capitalize %></p>
      </li>
    <% end %>
  </ul>
  <p><p><%= link_to "New", new_restaurant_path, class: "btn btn-primary"%></p>
</p>

